<div id="page_wrapper">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="fields"><%= f.input :email, required: false, autofocus: true %></div>
        <br>
        <div class="fields"><%= f.input :password, required: false %></div>
        <br>
        <div class="fields"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        <br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>